{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  data() {\n    return {\n      recept: {\n        naziv: \"\",\n        sastojci: [],\n        upute: [],\n        slika: \"\",\n        porcije: 1\n      }\n    };\n  },\n  created() {\n    this.dohvatiRecept();\n  },\n  methods: {\n    async dohvatiRecept() {\n      try {\n        const {\n          data\n        } = await axios.get(`/api/recepti/${this.$route.params.id}`);\n        this.recept = {\n          ...data,\n          sastojci: data.sastojci.join(\", \"),\n          upute: data.upute.join(\"\\n\")\n        };\n      } catch (error) {\n        console.error(\"Greška pri dohvaćanju recepta:\", error);\n      }\n    },\n    async azurirajRecept() {\n      try {\n        await axios.put(`/api/recepti/${this.$route.params.id}`, {\n          ...this.recept,\n          sastojci: this.recept.sastojci.split(\",\").map(s => s.trim()),\n          upute: this.recept.upute.split(\"\\n\").map(u => u.trim())\n        });\n        alert(\"Recept uspješno ažuriran!\");\n        this.$router.push(\"/mojirecepti\");\n      } catch (error) {\n        console.error(\"Greška pri ažuriranju recepta:\", error);\n        alert(\"Došlo je do greške pri spremanju promjena.\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","data","recept","naziv","sastojci","upute","slika","porcije","created","dohvatiRecept","methods","get","$route","params","id","join","error","console","azurirajRecept","put","split","map","s","trim","u","alert","$router","push"],"sources":["C:\\Users\\MATIN\\Desktop\\web aplikacije\\WA-frontend\\src\\views\\ReceptStranica.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h1>Uredi recept</h1>\r\n    <form @submit.prevent=\"azurirajRecept\">\r\n      <label for=\"naziv\">Naziv recepta:</label>\r\n      <input id=\"naziv\" v-model=\"recept.naziv\" type=\"text\" required />\r\n\r\n      <label for=\"sastojci\">Sastojci (odvojeni zarezima):</label>\r\n      <textarea id=\"sastojci\" v-model=\"recept.sastojci\"></textarea>\r\n\r\n      <label for=\"upute\">Upute (odvojene novim redom):</label>\r\n      <textarea id=\"upute\" v-model=\"recept.upute\"></textarea>\r\n\r\n      <label for=\"slika\">URL slike:</label>\r\n      <input id=\"slika\" v-model=\"recept.slika\" type=\"url\" />\r\n\r\n      <label for=\"porcije\">Broj porcija:</label>\r\n      <input id=\"porcije\" v-model.number=\"recept.porcije\" type=\"number\" min=\"1\" />\r\n\r\n      <button type=\"submit\">Spremi promjene</button>\r\n    </form>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from \"axios\";\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      recept: {\r\n        naziv: \"\",\r\n        sastojci: [],\r\n        upute: [],\r\n        slika: \"\",\r\n        porcije: 1,\r\n      },\r\n    };\r\n  },\r\n  created() {\r\n    this.dohvatiRecept();\r\n  },\r\n  methods: {\r\n    async dohvatiRecept() {\r\n      try {\r\n        const { data } = await axios.get(`/api/recepti/${this.$route.params.id}`);\r\n        this.recept = {\r\n          ...data,\r\n          sastojci: data.sastojci.join(\", \"),\r\n          upute: data.upute.join(\"\\n\"),\r\n        };\r\n      } catch (error) {\r\n        console.error(\"Greška pri dohvaćanju recepta:\", error);\r\n      }\r\n    },\r\n    async azurirajRecept() {\r\n      try {\r\n        await axios.put(`/api/recepti/${this.$route.params.id}`, {\r\n          ...this.recept,\r\n          sastojci: this.recept.sastojci.split(\",\").map((s) => s.trim()),\r\n          upute: this.recept.upute.split(\"\\n\").map((u) => u.trim()),\r\n        });\r\n        alert(\"Recept uspješno ažuriran!\");\r\n        this.$router.push(\"/mojirecepti\");\r\n      } catch (error) {\r\n        console.error(\"Greška pri ažuriranju recepta:\", error);\r\n        alert(\"Došlo je do greške pri spremanju promjena.\");\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scope