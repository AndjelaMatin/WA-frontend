{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport api from '@/services/api';\nexport default {\n  data() {\n    return {\n      recepti: [],\n      popupVisible: false,\n      currentComments: []\n    };\n  },\n  async created() {\n    try {\n      // Povlačenje recepata sa backend-a\n      const response = await api.get('/recepti');\n      this.recepti = response.data;\n      console.log(response.data); // Smeštamo recepte u lokalni state\n    } catch (error) {\n      console.error('Greška pri povlačenju recepata:', error);\n    }\n  },\n  methods: {\n    openRecipe(id) {\n      this.$router.push({\n        name: 'ReceptStranica',\n        params: {\n          id\n        }\n      });\n    },\n    showComments(komentari) {\n      this.currentComments = komentari;\n      this.popupVisible = true;\n    },\n    closePopup() {\n      this.popupVisible = false;\n    }\n  }\n};","map":{"version":3,"names":["api","data","recepti","popupVisible","currentComments","created","response","get","console","log","error","methods","openRecipe","id","$router","push","name","params","showComments","komentari","closePopup"],"sources":["C:\\Users\\MATIN\\Desktop\\web aplikacije\\WA-frontend\\src\\components\\CardComponent.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <div class=\"recepti-container\">\r\n      <div class=\"recept-card\" v-for=\"recept in recepti\" :key=\"recept._id\">\r\n        <img :src=\"recept.slika\" alt=\"Slika recepta\" class=\"recept-image\" />\r\n        <h2 class=\"recept-naziv\">{{ recept.naziv }}</h2>\r\n        <p><strong>Sastojci:</strong> {{ recept.sastojci.join(', ') }}</p>\r\n        <p><strong>Porcije:</strong> {{ recept.porcije }}</p>\r\n        <div class=\"recept-interakcije\">\r\n          <div class=\"like-container\">\r\n            <img src=\"heart.png\" height=\"25px\" alt=\"svidanje\" />\r\n            <span>{{ recept.svidanja }}</span>\r\n          </div>\r\n          <div class=\"komentar-container\" @click=\"